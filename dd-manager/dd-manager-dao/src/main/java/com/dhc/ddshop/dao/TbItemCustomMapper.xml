<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dhc.ddshop.dao.TbItemCustomMapper">


    <sql id="Base_Column_List">
    i.id, title, i.sell_point as sellPoint, i.price, i.num, i.barcode,
     i.image, i.cid, i.status, i.created, i.updated,
    c.name as catName

  </sql>

    <sql id="Where_Clause">
        <where>
            i.status != 3
            <if test="tbItemQuery != null and tbItemQuery.title != null and tbItemQuery.title != ''">
                and i.title like '%${tbItemQuery.title}%'
            </if>
            <if test="tbItemQuery != null and tbItemQuery.status != null and tbItemQuery.status != 0">
                and i.status = #{tbItemQuery.status}
            </if>
        </where>
    </sql>

    <select id="countItems" resultType="_int">

    SELECT COUNT(1)
    FROM  tb_item AS  i
        <include refid="Where_Clause"></include>
  </select>


    <select id="listItemsByPage"
            resultType="com.dhc.ddshop.pojo.vo.TbItemCustom">

        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_item i
        LEFT JOIN tb_item_cat c ON i.cid=c.id
        <include refid="Where_Clause"></include>

        <choose>
            <when test="order !=null and order.sort!=null and order.order!=null">
                <foreach collection="order.orderParams" item="item" open="order by" close="" separator=",">
                    i.${item}
                </foreach>
            </when>
            <otherwise>
                ORDER BY i.id DESC
            </otherwise>
        </choose>


        Limit #{page.offset},#{page.rows}

    </select>

</mapper>